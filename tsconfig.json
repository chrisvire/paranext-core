{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "lib": ["dom", "es2021"],
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["../assets/*"],
      "@client/*": ["./client/*"],
      "@extension-host/*": ["./extension-host/*"],
      "@main/*": ["./main/*"],
      "@node/*": ["./node/*"],
      "@renderer/*": ["./renderer/*"],
      "@shared/*": ["./shared/*"],
      "@node_modules/*": ["../node_modules/*"]
    },
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types", "./extensions/lib", "src/@types"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "incremental": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "outDir": ".erb/dll"
  },
  "exclude": [
    "node_modules",
    "test",
    "release/build",
    "release/app/dist",
    ".erb/dll",
    "extensions",
    "lib/papi-components",
    "lib/papi-dts"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
