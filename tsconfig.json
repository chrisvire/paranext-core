{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "es2021"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["../assets/*"],
      "@client/*": ["./client/*"],
      "@extension-host/*": ["./extension-host/*"],
      "@extensions/*": ["../extensions/dist/*"],
      "@main/*": ["./main/*"],
      "@node/*": ["./node/*"],
      "@renderer/*": ["./renderer/*"],
      "@shared/*": ["./shared/*"],
      "@node_modules/*": ["../node_modules/*"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "typeRoots": ["./node_modules/@types", "./extensions/dist"]
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll", "extensions"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
