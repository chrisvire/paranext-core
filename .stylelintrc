{
  "extends": ["stylelint-config-recommended", "stylelint-config-sass-guidelines"],
  "overrides": [
    {
      "files": ["**/*.scss"],
      "customSyntax": "postcss-scss"
    }
  ],
  "rules": {
    "color-named": null,
    "function-parentheses-space-inside": null,
    "no-descending-specificity": null,
    "max-nesting-depth": 2,
    "selector-max-id": 1,
    "selector-max-compound-selectors": 4
  }
}
